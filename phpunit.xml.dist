<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="false"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         bootstrap="vendor/autoload.php"
        >
    <testsuites>
        <testsuite name="Main suite">
            <directory>./tests/run</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory>./</directory>
            <exclude>
                <directory>./tests</directory>
                <directory>./vendor</directory>
            </exclude>
        </whitelist>
    </filter>
    <listeners>
        <listener class="Nikoms\FailLover\Listener\ReplayListener" file="src/Listener/ReplayListener.php">
            <arguments>
                <object class="Nikoms\FailLover\FileSystem\Csv\CsvReader">
                    <arguments>
                        <string>output/tests-that-failed-before.csv</string>
                    </arguments>
                </object>
            </arguments>
        </listener>
        <listener class="Nikoms\FailLover\Listener\LoggerListener" file="src/Listener/LoggerListener.php">
            <arguments>
                <object class="Nikoms\FailLover\FileSystem\Csv\CsvRecorder">
                    <arguments>
                        <string>output/tests-that-failed-again.csv</string>
                    </arguments>
                </object>
            </arguments>
        </listener>
    </listeners>
</phpunit>
